{
  "name": "@whisk/steakhouse",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/office-supply-ventures/whisk-sdk.git",
    "directory": "packages/steakhouse"
  },
  "scripts": {
    "generate:vaults": "tsx scripts/generate-vaults.ts",
    "generate:vaults:watch": "chokidar \"src/metadata/vaults/**/*.md\" --initial -c \"pnpm generate:vaults\"",
    "build": "pnpm generate:vaults && tsup",
    "dev": "concurrently -n vaults,tsup -c blue,green \"pnpm generate:vaults:watch\" \"tsup --watch\""
  },
  "type": "module",
  "main": "./dist/index.js",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "src": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./react": {
      "src": "./src/react/index.ts",
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./metadata": {
      "src": "./src/metadata/index.ts",
      "types": "./dist/metadata/index.d.ts",
      "default": "./dist/metadata/index.js"
    }
  },
  "dependencies": {
    "@urql/core": "catalog:",
    "@whisk/client": "workspace:*",
    "@whisk/graphql": "workspace:*",
    "gql.tada": "catalog:"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5",
    "graphql": ">=16",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "@tanstack/react-query": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tanstack/react-query": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "gray-matter": "^4.0.3",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tsx": "^4.20.6",
    "viem": "^2.0.0",
    "zod": "^3.24.0"
  }
}

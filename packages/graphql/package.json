{
  "name": "@whisk/graphql",
  "version": "0.0.18",
  "repository": {
    "type": "git",
    "url": "https://github.com/office-supply-ventures/whisk-sdk.git",
    "directory": "packages/graphql"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "schema:sync": "tsx scripts/fetch-schema.ts https://staging.api-v2.whisk.so/graphql && gql.tada generate-output",
    "schema:sync:local": "tsx scripts/fetch-schema.ts http://localhost:3500/graphql && gql.tada generate-output",
    "check:graphql": "gql.tada check",
    "check:types": "tsgo --noEmit"
  },
  "type": "module",
  "main": "./dist/index.js",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "src": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "gql.tada": "catalog:"
  },
  "peerDependencies": {
    "graphql": ">=16"
  },
  "devDependencies": {
    "@urql/introspection": "^1.2.1",
    "tsx": "^4.20.6",
    "graphql": "^16.12.0"
  }
}

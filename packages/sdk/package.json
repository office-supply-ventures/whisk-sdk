{
  "name": "@paperclip-labs/whisk-sdk",
  "version": "0.0.9",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./format": {
      "import": "./dist/format/index.js",
      "require": "./dist/format/index.js"
    },
    "./identity/core": {
      "default": "./dist/identity/core/index.js"
    },
    "./identity": {
      "default": "./dist/identity/index.js"
    },
    "./ui": {
      "default": "./dist/ui/index.js"
    }
  },
  "scripts": {
    "stylegen": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "stylegen-watch": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "build": "pnpm stylegen && tsc && tsc-alias",
    "dev": "concurrently \"pnpm stylegen-watch\" \"pnpm tsc -w\" \"pnpm tsc-alias -w\""
  },
  "keywords": [],
  "author": "Paperclip Labs",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.17.9",
    "@types/react": "^18.3.11",
    "concurrently": "^9.0.1",
    "next": "^14.2.15",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.59.15",
    "react": "^18.3.1"
  },
  "dependencies": {
    "@paperclip-labs/whisk-client": "^0.0.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "framer-motion": "12.0.0-alpha.1",
    "hono": "^4.6.12",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "tsc-alias": "^1.8.10",
    "viem": "2.x"
  }
}

{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2022",
    "module": "ESNext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "./types"],
    "rootDir": "src",
    "isolatedModules": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
